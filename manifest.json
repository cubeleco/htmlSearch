{
"manifest_version": 2,
"version": "1.0",
"name": "HTML Search",
"description": "Highlight, focus, select, and scroll through HTML elements by CSS selector",

"browser_specific_settings": {
	"gecko": {
		"id": "htmlSearch@cubeleco"
	}
},
"icons": {
	"48": "icons/icon.png",
	"96": "icons/icon.svg"
},
"options_ui": {
	"page": "pages/options.html"
},

"content_scripts": [{
	"matches": ["<all_urls>"],
	"js": ["defaults.js", "search.js"],
	"css": ["search.css"],
	"run_at": "document_start"
}],
"permissions": ["storage"]
}
